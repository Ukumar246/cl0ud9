<div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">


    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Invite a friend</h4>
      </div>
      <div class="modal-body text-justify">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_tag("/tournaments/invite", :method => "post") do %>
                <%= label_tag(:q, "Friend's Email: ") %>
                <%= text_field_tag :q, nil, class: 'form-control' %>
                <br></br>
                <%= submit_tag("Invite", class: 'btn btn-primary') %>
                <%= hidden_field_tag :tournament_id, @tournament.id %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <!--empty now for spacing purposes-->
      </div>
    </div>

  </div>
</div>
