<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Let's start with the basic details</h4>
			</div>
			<div class="modal-body text-justify">
				<%= form_for @player, url: {:controller =>'people', :action => 'update'}, method:'put' do |t| %>
				<div class="container">
					<div class="row col-md-offset-0">
						<h4> My Information:</h4>
					</div>
					<br>
					<div class="row">
						<div class="col-md-4 col-md-offset-1">
                <%= t.label :fName, "First Name:" %>
				        <%= t.text_field(:fName, class: 'form-control')%>
                <br>

                <%= t.label :lName, "Last Name:" %>
				        <%= t.text_field(:lName, class: 'form-control')%>
                <br>

                <%= t.label :birthDate, "Birthday (YYYY-MM-DD):" %>
				        <%= t.text_field(:birthDate, class: 'form-control')%>
                <br>

                <%= t.label :twitterLink, "Twitter" %>
				        <%= t.text_field(:twitterLink, class: 'form-control')%>
                <br>

                <%= t.label :fbLink, "Facebook" %>
				        <%= t.text_field(:fbLink, class: 'form-control')%>
                <br>

                <%= t.label :profilePicLink, "Profile Picture:" %><br>
                <%= t.file_field :profilePicLink %>
                <br>
						</div>
					</div>
				</div>

				<div id = "submit" class="row">
					<div class="text-center">
						<button type = "submit" class ="btn btn-primary" %>
							Submit
						</button>
				</div>
			</div>
			<!--Hidden field to grab the person id-->
			<%= if (current_person != nil && current_person.id == @player.id) then t.hidden_field :person_id, :value => current_person.id end %>
			<% end %>
		</div>
		<div class="modal-footer">
			<!--empty now for spacing purposes-->
		</div>
	</div>
</div>
</div>
