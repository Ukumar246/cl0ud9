<% provide(:title, 'Login') %>
<div class="container">
  <h1>Log In to Cl0ud9!</h1>
  <div class="span12">
    <form>
      <%= form_for(:session, url: login_path) do |f| %>

        <div class="form-group row">
        <%= f.label :"Login", class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, class: "col-sm-3"%>
        </div>

        <div class="form-group row">
        <%= f.label :Password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :pword, class: "col-sm-3"%>
        </div>
        <%= f.submit "Login", class: "btn btn-primary" %>
        <br>
        <br>
        <p><i> New to Cl0ud9? </i><%= link_to "Sign up!", new_person_path %></p>
      <% end %>
    </form>
  </div>
</div>