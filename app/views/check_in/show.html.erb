        <span style="padding-left: 10px;">Web Designer</span>
      </li>
    <% end %>
  </ul>
  <!-- Done Button -->
  <div style="padding-top:2%">
    <button class="w3-btn w3-padding-xxlarge w3-right" >Done</button>
  </div>

</div>


