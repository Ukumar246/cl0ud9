<div class="container">
  <h1>Tournament Schedule</h1>
  <h3>There are <%= @count%> upcoming tournaments</h3>
  
  <a class="btn btn-primary" href="tournaments/new">Host a Tournament with us</a>
 
  <table class="table thead-invese table-hover">
  	<thead>
    	<tr>
  			
        <th>
        </th>

  			<th class="tournament">
  				<div class="tournament-container">
  					
            <%= sortable "name", "Tournament" %>

  					<span class="arrow-link arrow-link-down"></span>
  				</div>
  			</th>

        <th class="dates">
          <div class="dates-container">
            
            <!--<%= sortable "tournamentDate", "Date" %>-->
            Date

            <span class="arrow-link arrow-link-down"></span>
          </div>
        </th>

        <th class="course">
          <div class="course-container">
            
            <!--
            <%= sortable "course_name", "Golf Course" %>
            -->
            Golf Course

            <span class="arrow-link arrow-link-down"></span>
          </div>
        </th>
        
        <th class="host_id">
          <div class="host_id-container">
            
            <%= sortable "host_id" %>
            
            <span class="arrow-link arrow-link-down"></span>
          </div>
        </th>
  			
   		</tr>
  	</thead>

    <div class="col-xs-12" style="height:40px;"></div>

  	<tbody>
        <!-- Sorry Grace, you can put the private thing back in when it works with the sorting above-->
    	  <% for tourney in @tournaments %>
        <tr>
          <td>
            <%= cl_image_tag(tourney.logoLink, :width => 40, :height => 40, :crop => :fill)%>
          </td>
  				<td><%= link_to tourney.name, tourney%></td>
          <td><%= tourney.tournamentDate.strftime("%d %B, %Y") %></td>
          <td><%= if (tourney.golf_course != nil) then link_to tourney.golf_course.name, tourney.golf_course.websiteURL end%></td>

          <td><%= if (tourney.host != nil) then tourney.host.hostName end%></td>
    	<% end %>
  	</tbody>
  </table>
</div>
