
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">

  <% if person_signed_in? %>

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Email Player</h4>
      </div>
      <div class="modal-body text-justify">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
          <%= form_tag :controller => 'tournaments', :action => 'email', :method => 'post' do %>

            <%= label_tag(:player, "Email To:") %><br>
            <%= collection_select :player, :id, @people, :id, :email , {:include_blank => 'Email all players'}, {:class => 'form-control'} %><br>

            <%= label_tag(:email_subject, "Subject:") %> <br>
            <%= text_field_tag :email_subject, nil, class: 'form-control' %> <br><br>

            <%= label_tag(:email_body, "Email Body:") %> <br>
            <%= text_area_tag :email_body, nil, class: 'form-control' %> <br><br>

            <%= submit_tag('Send Email', class: 'btn btn-primary pull-right') %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <!--empty now for spacing purposes-->
      </div>
    </div>
  <% end %>

  </div>
</div>
