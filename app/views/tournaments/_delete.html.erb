<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">

  <% if person_signed_in? %>

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Delete Tournament</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <p>Are you sure you want to delete this tournament?</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 pull-right">
            <a class="btn btn-secondary" data-dismiss="modal">No</a>
            <%= link_to "Yes", {:controller => :tournaments, :action => 'destroy', :id => @tournament.id}, class: 'btn btn-primary', :method => :delete %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <!--empty now for spacing purposes-->
      </div>
    </div>

  <% end %>

  </div>
</div>
