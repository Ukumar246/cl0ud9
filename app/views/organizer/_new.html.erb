<!--Partial view as a modal -->

<div class="modal fade" id="adminModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Add Admin</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
						<%= form_for :organizer, url: {:controller =>'organizer', :action => 'create'}, method:'post' do |f| %>

						<% if false %>
						<%= f.label "Entire Email:"%>
						<%= text_field_tag id = "email_value", class: 'form-control'%>

						<button id = "search_button" type = "button" class = "btn btn-primary btn-mid">
							Search
						</button>
						<%end%>

						<br>
						<%= f.label "Select a person" %>
						<%= f.select :person_id, options_for_select(@person.collect { |person| [person.email, person.id] }.sort.insert(0,""), 0),  {id: "admin_select"}, {class: 'form-control'}%>
						<br>

						<%= f.label "Select Permission Level" %>
						<%= f.select :permission, [["Edit", "EDIT"], ["Full", "FULL"]], {},{class: 'form-control'} %>

						<!--Hidden Field for tournament ID-->
						<%= hidden_field_tag(:tournament_id, @tournament.id) %>
						<br>
						<%= f.submit 'Add Admin', class: 'btn btn-primary pull-right', id: 'add_admin_btn'%>
						<% end %>
					</div>
				</div>
			</div>
          <div class="modal-footer">
            <!--empty now for spacing purposes-->
			</div>
        </div>

	</div>
</div>
